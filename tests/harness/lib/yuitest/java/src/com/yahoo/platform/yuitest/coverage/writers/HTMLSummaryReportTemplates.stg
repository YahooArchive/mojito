group HTMLFileReportTemplates;

report(report,date) ::= <<
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
    "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en-US">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Code Coverage Report</title>
    <style type="text/css">
/*
Copyright (c) 2009, Yahoo! Inc. All rights reserved.
Code licensed under the BSD License:
http://developer.yahoo.net/yui/license.txt
version: 3.0.0
build: 1549
*/
html{color:#000;background:#FFF;}body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td{margin:0;padding:0;}table{border-collapse:collapse;border-spacing:0;}fieldset,img{border:0;}address,caption,cite,code,dfn,em,strong,th,var{font-style:normal;font-weight:normal;}li{list-style:none;}caption,th{text-align:left;}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}q:before,q:after{content:'';}abbr,acronym{border:0;font-variant:normal;}sup{vertical-align:text-top;}sub{vertical-align:text-bottom;}input,textarea,select{font-family:inherit;font-size:inherit;font-weight:inherit;}input,textarea,select{*font-size:100%;}legend{color:#000;}
body{font:13px/1.231 arial,helvetica,clean,sans-serif;*font-size:small;*font:x-small;}select,input,button,textarea{font:99% arial,helvetica,clean,sans-serif;}table{font-size:inherit;font:100%;}pre,code,kbd,samp,tt{font-family:monospace;*font-size:108%;line-height:100%;}
h1{font-size:138.5%;}h2{font-size:123.1%;}h3{font-size:108%;}h1,h2,h3{margin:1em 0;}h1,h2,h3,h4,h5,h6,strong{font-weight:bold;}
    </style>
    <style type="text/css">

    .page {
        width: 63em;
        margin: 0 auto;
    }

    .page .ft {
        font-size: 85%;
        margin-bottom: 1.5em;
        padding-top: 0.3em;
        border-top: 1px solid #d8d8d8;
    }

    .files {
        border: 1px solid #d8d8d8;
        margin-bottom: 1em;
    }

    .files td.filename {
        width: 20em;
        text-align: left;
    }

    .files .results {
        width: 10em;
        text-align: center;
        border-left: 1px solid #d8d8d8;
    }

    .files td,
    .files th {
        padding: 0.2em;
    }

    .files td {
        text-align: right;
    }

    .files tr {
        border-bottom: 1px solid #d8d8d8;
    }

    .files thead th {
        font-weight: bold;
        border-bottom: 1px solid #d8d8d8;
        background: #f0f0f0;
    }

    </style>
</head>
<body>
    <div class="page">

        <div class="hd">
            <!-- title -->
            <h1>Code Coverage Report</h1>
            <h2>Date Generated: $date$</h2>
        </div>

        <div class="bd">

            <!-- files table -->
            <table class="files">
                <thead>
                    <tr>
                        <th>Filename</th>
                        <th class="results">Lines</th>
                        <th class="results">Functions</th>
                    </tr>
                </thead>
                <tbody>
                $report.fileReports:file()$
                </tbody>
            </table>
        </div>

        <!-- footer -->
        <div class="ft">
            <p>Code coverage report generated on $date$ by YUI Test.</p>
        </div>
    </div>

</body>
</html>
>>

file() ::= <<
    <tr>
        <td class="filename"><a href="$it.reportName$.html">$it.filename$</a></td>
        <td class="results">$it.calledLineCount$/$it.totalLineCount$ ($it.calledLinePercentage$%)</td>
        <td class="results">$it.calledFunctionCount$/$it.totalFunctionCount$ ($it.calledFunctionPercentage$%)</td>
    </tr>
>>